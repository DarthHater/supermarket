{
  "version": "2",
  "build_cookbook": {
    "name": "build_cookbook",
    "path": ".delivery/build_cookbook"
  },
  "skip_phases": [
    "lint",
    "syntax",
    "quality",
    "syntax",
    "security"
  ],
  "job_dispatch": {
    "version": "v2",
    "filters": {
      "default": {
        "os": ["linux"],
        "platform": ["ubuntu"],
        "platform_version": ["16.04"]
      }
    }
  },
  "delivery-truck": {
    "lint": {
      "enable_cookstyle": true,
      "ignore_rules": ["FC009", "FC014", "FC015", "FC023", "FC048"]
    },
    "publish": {
      "chef_server": true
    }
  },
  "dependencies": [
    "engineering-services/cd-infrastructure"
  ]
}
