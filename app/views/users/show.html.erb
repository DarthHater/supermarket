<div class="page">
  <div class="title">
    <span class="fa fa-user"></span><%= @user.name %>
  </div>

  <div class="content">
    <% if @user.icla_signatures.any? %>
      <%= link_to "View ICLA", @user.icla_signatures.first %>
    <% end %>

    <% @user.organization_users.each do |organization_user| %>
      <% if organization_user.admin? %>
        Admin of <%= organization_user.organization.name %> - <%= link_to "[View CCLA]", organization_user.organization.ccla_signature %>
      <% else %>
        Member of <%= organization_user.organization.name %> - <%= link_to "[View CCLA]", organization_user.organization.ccla_signature %>
      <% end %>
    <% end %>
  </div>
</div>
