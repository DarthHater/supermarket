
  <div class='title'>
    <span class='fa fa-group'></span>Change your password
  </div>

  <div class='content'>
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), method: :put) do |f| %>
      <%= render 'application/form_errors', record: resource %>

      <%= f.hidden_field :reset_password_token %>

      <fieldset>
        <%= f.label :password, 'New password' %>
        <%= f.password_field :password, autofocus: true %>
      </fieldset>

      <fieldset>
        <%= f.label :password_confirmation, 'Confirm new password' %>
        <%= f.password_field :password_confirmation %>
      </fieldset>

      <%= f.submit 'Change my password', class: 'button primary' %>
    <% end %>

    <%= render 'devise/shared/links' %>
  </div>

