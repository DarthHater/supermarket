<% if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to "Create an Account", new_registration_path(resource_name), class: 'button success radius expand' %>
<% end %>

<% if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <p><small><%= link_to "Forgot your password?", new_password_path(resource_name) %><small></p>
<% end %>
